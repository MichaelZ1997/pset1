<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.michael.michaelvanderzwet_pset1.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/body" />

            <ImageView
                android:id="@+id/arms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/arms" />

            <ImageView
                android:id="@+id/ears"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/ears" />

            <ImageView
                android:id="@+id/eyebrows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/eyebrows" />

            <ImageView
                android:id="@+id/eyes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/eyes" />

            <ImageView
                android:id="@+id/glasses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/glasses" />

            <ImageView
                android:id="@+id/hat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/hat" />

            <ImageView
                android:id="@+id/mouth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/mouth" />

            <ImageView
                android:id="@+id/mustache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/mustache" />

            <ImageView
                android:id="@+id/nose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/nose" />

            <ImageView
                android:id="@+id/shoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:srcCompat="@drawable/shoes" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/oren"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="CheckBoxClicked"
                android:text="@string/Oren" />

            <CheckBox
                android:id="@+id/wenkbrauwen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="CheckBoxClicked"
                android:text="@string/Wenkbrauwen" />

            <CheckBox
                android:id="@+id/ogen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="CheckBoxClicked"
                android:text="@string/Ogen" />

            <CheckBox
                android:id="@+id/hoed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="CheckBoxClicked"
                android:text="@string/Hoed" />

            <CheckBox
                android:id="@+id/bril"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="CheckBoxClicked"
                android:text="@string/Bril" />

            <CheckBox
                android:id="@+id/snor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="CheckBoxClicked"
                android:text="@string/Snor" />

            <CheckBox
                android:id="@+id/schoenen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="CheckBoxClicked"
                android:text="@string/Schoenen" />

            <CheckBox
                android:id="@+id/mond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="CheckBoxClicked"
                android:text="@string/Mond" />

            <CheckBox
                android:id="@+id/armen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="CheckBoxClicked"
                android:text="@string/Armen" />

            <CheckBox
                android:id="@+id/neus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="CheckBoxClicked"
                android:text="@string/Neus" />

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
